<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pantry</title>
</head>
<body>
    <h1>Your Pantry</h1>
    <ul>
        <% pantry.forEach(function(item) { %>
            <li>
                <%= item.name %>
                <a href="/users/<%= user._id %>/foods/<%= item._id %>/edit">Edit</a> |
                <form action="/users/<%= user._id %>/foods/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
    <a href="/users/<%= user._id %>/foods/new">Add New Item</a>
</body>
</html>
